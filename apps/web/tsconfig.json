{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@connectgig/types": [
        "../../packages/types/src"
      ],
      "@connectgig/ui": [
        "../../packages/ui/src"
      ],
      "@connectgig/database": [
        "../../packages/database/src"
      ],
      "@connectgig/utils": [
        "../../packages/utils/src"
      ]
    },
    "module": "esnext",
    "moduleResolution": "node"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out"
  ]
}
